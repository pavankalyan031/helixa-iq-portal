# LTSU Student Portal - Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Database Configuration (if using additional databases)
# DATABASE_URL=mongodb://localhost:27017/ltsu_portal
# REDIS_URL=redis://localhost:6379

# JWT Configuration (if using JWT tokens)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=24h
REFRESH_TOKEN_EXPIRE=7d

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@ltsu.edu

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_EMAIL_DOMAIN=admin
DEFAULT_ADMIN_EMAIL=admin@ltsu.edu

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=90
ENABLE_ANALYTICS=true

# Cache Configuration
CACHE_TTL=3600
REDIS_ENABLED=false

# API Configuration
API_VERSION=v1
API_PREFIX=/api
CORS_ORIGIN=http://localhost:5173

# Monitoring Configuration
ENABLE_MONITORING=true
HEALTH_CHECK_INTERVAL=30000

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true
ENABLE_BACKUP=true
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true